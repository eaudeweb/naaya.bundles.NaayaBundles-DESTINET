  <metal:head metal:fill-slot="head">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <script type="text/javascript" src="/++resource++Products.Naaya/lib/datatables/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/plug-ins/1.10.16/sorting/diacritics-sort.js"></script>
    <link rel="stylesheet" type="text/css" href="/++resource++Products.Naaya/lib/datatables/jquery.dataTables.css" />
    <script>
      (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s);
        js.id = id;
        js.src = "//connect.facebook.net/en_GB/all.js#xfbml=1";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));

      $(document).ready(function() {
        var refreshTimer;
        var refreshInterval = 2000;
        $('.hidden').prev('h3').addClass('dyn-h3');
        $('.hidden').hide();
        $('.hidden').each(function() {
          if ($(this).attr('id') != 'dialog-delete-confirm') {
            $(this).before('<a class="show_more" href="javascript:void(0)"><' + '/a>');
          }
        });
        $('a.show_more').click(function() {
          if ($(this).prev('h3').hasClass('reverse')) {
            $(this).next().slideUp();
            $(this).prev('h3').removeClass('reverse');
          } else {
            $(this).prev('h3').addClass('reverse');
            $(this).next().slideDown();
          }
        });
        if ($('#folderfile_list table tr').length > 0){
          $('#folderfile_list').DataTable({
            'sPaginationType': 'full_numbers',
            "pageLength": 10,
            "lengthMenu": [ [10, 15, 25, 50, 100, -1], [10, 15, 25, 50, 100, "All"] ]
          });
        }

        $('#compas_topics').click(function(event) {
          event.preventDefault();
        });

        countries_array = [];
        $('#coverage option').each(function(){
            if($(this).hasClass('folder')){
              countries_array.push({id: $(this).val(), text: '<div class="folder">'+$(this).val()+'<'+'/div>'})
            } else {
              countries_array.push({id: $(this).val(), text: '<div class="element">'+$(this).val()+'<'+'/div>'})
            }
        })

        $('#coverage option').remove()

        $("#coverage").select2({
          data: countries_array,
          templateResult: function (d) { return $(d.text); },
          templateSelection: function (d) { return $(d.text); },
        });
        if(selected_country){
          $('#coverage').val(selected_country[0]).trigger('change.select2');
          $('#address').val(address || selected_country[0]);
          findAddress();
          clearTimeout(refreshTimer);
        }

        //map configuration

        $('#geo_types').select2();

        $('#org_types').select2({placeholder: 'Show organisation types'});
        if(geo_types.length){
          const org_types = geo_types.filter(element => all_org_types.includes(element));
          if (org_types.length){
            $('#org_types').val(org_types).trigger('change.select2');
          }
        } 
        $('#org_types').change(function(){
          if ($(this).val() != null && $(this).val().indexOf("all") !== -1){
            $('#org_types option').each(function(){
              if ($(this).value !== 'all'){
                $(this).attr('selected', 'selected');
              }
              $('#org_types option[value="all"]').removeAttr('selected');
              $('#org_types').trigger('change.select2');
            });
          };
          checkAndReset()
          updateGeoTypes();
        })

        $('#market_types').select2({placeholder: 'Show market place orgs'});
        if(geo_types.length){
          const market_types = geo_types.filter(element => all_market_types.includes(element));
          if (market_types.length){
            $('#market_types').val(market_types).trigger('change.select2');
          }
        } 
        $('#market_types').change(function(){
          if ($(this).val() != null && $(this).val().indexOf("all") !== -1){
            $('#market_types option').each(function(){
              if ($(this).value !== 'all'){
                $(this).attr('selected', 'selected');
              }
              $('#market_types option[value="all"]').removeAttr('selected');
              $('#market_types').trigger('change.select2');
            });
          };
          checkAndReset()
          updateGeoTypes();
        })

        $('#going_green_types').select2({placeholder: 'Show Going Green orgs'});
        if(geo_types.length){
          const going_green_types = geo_types.filter(element => all_going_green_types.includes(element));
          if (going_green_types.length){
            $('#going_green_types').val(going_green_types).trigger('change.select2');
          }
        } 
        $('#going_green_types').change(function(){
          if ($(this).val() != null && $(this).val().indexOf("all") !== -1){
            $('#going_green_types option').each(function(){
              if ($(this).value !== 'all'){
                $(this).attr('selected', 'selected');
              }
              $('#going_green_types option[value="all"]').removeAttr('selected');
              $('#going_green_types').trigger('change.select2');
            });
          };
          checkAndReset()
          updateGeoTypes();
        })

        $('#solution_types').select2({placeholder: 'Show market solutions'});
        if(geo_types.length){
          const solution_types = geo_types.filter(element => all_solution_types.includes(element));
          if (solution_types.length){
            $('#solution_types').val(solution_types).trigger('change.select2');
          }
        } 
        $('#solution_types').change(function(){
          if ($(this).val() != null && $(this).val().indexOf("all") !== -1){
            $('#solution_types option').each(function(){
              if ($(this).value !== 'all'){
                $(this).attr('selected', 'selected');
              }
              $('#solution_types option[value="all"]').removeAttr('selected');
              $('#solution_types').trigger('change.select2');
            });
          };
          checkAndReset()
          updateGeoTypes()
        })

        $('#keyword').select2();
        if (geo_query.length){
          if (typeof(geo_query) == 'string'){
            $('#keyword').val(geo_query).trigger('change.select2');
            $('#geo_query').val(geo_query).trigger('change');
          } else if (typeof(geo_query) == 'object') {
            const keyword = geo_query.filter(element => all_keywords.includes(element));
            if (keyword.length){
              $('#keyword').val(keyword[0]).trigger('change.select2');
              $('#geo_query').val(keyword[0]).trigger('change');
            }
          }
        }
        $('#keyword').change(function(){
          $('#geo_query').val($(this).val());
        });

        $('#coverage').change(function(){
          var this_country = $(this).val();
          if (this_country != ''){
            $('#address').val(this_country);
            findAddress();
            clearTimeout(refreshTimer); 
        }
        })

        $('.map-refresh').change(function(){
          refreshMap();
        });

        $('#agenda2030_sdgs').select2({placeholder: ''})
        $('#agenda2030_sdgs').change(function(){
          if ($(this).val() !== null && $(this).val().indexOf("all") !== -1){
            $(this).val("").trigger('change');
          }
          refreshMap();
        });

        checkAndReset()
        updateGeoTypes()
        refreshMap();

        function updateGeoTypes(){
          res = [];
          if ($('#org_types').val() != null){
            res = $('#org_types').val();
          }
          if ($('#market_types').val() != null){
            res = res.concat($('#market_types').val());
          }
          if ($('#going_green_types').val() != null){
            res = res.concat($('#going_green_types').val());
          }
          if ($('#solution_types').val() != null){
            res = res.concat($('#solution_types').val());
          }
          $('#geo_types').val(res).trigger('change.select2');
          refreshMap();
        }

        function checkAndReset(){
          if ($('#org_types').val() == null &&
              $('#market_types').val() == null &&
              $('#going_green_types').val() == null &&
              $('#solution_types').val() == null) {
                $('#org_types').val(all_org_types).trigger('change.select2');
                $('#market_types').val(all_market_types).trigger('change.select2');
                $('#going_green_types').val(all_going_green_types).trigger('change.select2');
                $('#solution_types').val(all_solution_types).trigger('change.select2');
              }
        }

        function refreshMap(){
          clearTimeout(refreshTimer);
          refreshTimer = setTimeout(startMapRefresh, refreshInterval);
        }

        function formatState (state) {
          if (!state.id) {
            return state.text;
          }
          var baseUrl = "/user/pages/images/flags";
          var $state = $(
            '<span><img src="' + baseUrl + '/' + state.element.value.toLowerCase() + '.png" class="img-flag" /> ' + state.text + '<' + '/span>'
          );
          return $state;
        };

      });
    </script>
